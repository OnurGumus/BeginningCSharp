<Window x:Class="WPFAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Hello .NET Core!" x:Name="MyLabel" HorizontalAlignment="Center" VerticalAlignment="Center"
               FontSize="40"/>
        <Button Content="Change Text" Grid.Row="1" FontSize="20" Click="Button_Click"/>
    </Grid>
</Window>
